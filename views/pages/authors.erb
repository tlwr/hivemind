<div>
  <header class="flex mb-32 items-end">
    <h1 class="text-4xl mr-8">authors</h1>

    <p class="text-gray-500 mr-8"><%= @authors.count %> authors in library</p>
  </header>

  <% @authors.sort.each do |author| %>
    <p class="mt-4">
      <a class="underline hover:text-indigo-500" href="/epubs?author=<%= ERB::Util::url_encode(author) %>">
        <%= author %>
      </a>
    </p>
  <% end %>
</div>
